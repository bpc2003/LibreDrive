package templates

import (
  "fmt"

  "libredrive/models"
)

templ Users(users []models.User) {
  <tbody>
    for _, user := range users {
      <tr>
        <td>
          { user.Username }
        </td>
        <td>
          <a hx-delete={ fmt.Sprintf("/api/users/%d", user.ID) } hx-confirm={ fmt.Sprintf("Are you sure you want to delete this user?") } class="text-danger">
            <i class="bi bi-trash"></i>
          </a>
        </td>
      </tr>
    }
  </tbody>
}
